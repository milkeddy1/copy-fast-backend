generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// this is what prisma need to generate the table
enum ContentType {
  TEXT
  FILE
}

// 可能是文字也可能是檔案
model Content {
  id        Int      @id @default(autoincrement())
  type      ContentType
  text      String?
  file      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}